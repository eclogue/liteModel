{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": false,
    "allowJs": true,
    "rootDir": "lib",
    "outDir": "dist",
    "esModuleInterop": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["lib/**/*", "lib/typings.d.ts"],
  "exclude": ["node_modules", "dist", "**/__test__", "test", "docs", "tests"]
}
